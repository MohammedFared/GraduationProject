<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.egypt.app.Fragment_AgriculturalActivities">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:layout_marginTop="16dp">

            <Switch
                android:id="@+id/switch1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layoutDirection="rtl"
                android:paddingTop="16dp"
                android:text="هل لدى الاسره ايا من الحيازات الاتيه:"
                android:textColor="@color/colorPrimary" />


            <CheckBox
                android:id="@+id/check_earth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/switch1"
                android:layout_margin="16dp"
                android:enabled="false"
                android:layoutDirection="rtl"
                android:text="أرض زراعيه" />

            <CheckBox
                android:id="@+id/check_cow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/check_earth"
                android:layout_centerHorizontal="true"
                android:enabled="false"
                android:layoutDirection="rtl"
                android:text="ماشيه" />

            <CheckBox
                android:id="@+id/check_sheep"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/check_cow"
                android:layout_margin="16dp"
                android:enabled="false"
                android:layoutDirection="rtl"
                android:text="أغنام/ماعز" />

            <CheckBox
                android:id="@+id/check_chicken"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/check_sheep"
                android:layout_centerHorizontal="true"
                android:enabled="false"
                android:layoutDirection="rtl"
                android:text="دواجن" />

            <CheckBox
                android:id="@+id/check_bee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="16dp"
                android:layout_below="@id/check_sheep"
                android:enabled="false"
                android:layoutDirection="rtl"
                android:text="مناحل" />

            <CheckBox
                android:id="@+id/check_machines"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/check_sheep"
                android:layout_centerHorizontal="true"
                android:enabled="false"
                android:layoutDirection="rtl"
                android:text="الات زراعيه" />

            <CheckBox
                android:id="@+id/check_fish"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/check_machines"
                android:layout_margin="16dp"
                android:enabled="false"
                android:layoutDirection="rtl"
                android:text="أقفاص سمكيه" />

        </RelativeLayout>

        <Button
            android:id="@+id/button_agricalturalActivities"
            android:layout_below="@id/relativeLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/colorPrimary"
            android:text="احفظ"
            android:textColor="@android:color/white" />

    </RelativeLayout>
</ScrollView>
